<div class="container">
  <div class="row"></div>
  <div class="row"></div>
  <div class="row">

    <% @products.each do |product| %>
    <div class="col s12 m6 l4">

      <div class="card z-depth-2">
        <%= link_to product do %>
        <div class="card-image">
          <%= image_tag 'xe.jpg' %>
        </div>
        <div class="card-content">
          <span class="card-title"><%= product.name %></span>
          <p><%= product.content.html_safe %></p>
        </div>
        <% end %>
        <div class="card-action">
          <div class="row">
            <div class="col s6 l4">
              <p><%= product.price %></p>
            </div>
            <div class="col s6 l8">
              <a href="" class="waves-effect waves-light btn">Add to Cart</a>
            </div>
          </div>
        </div>
      </div>

    </div>
    <% end %>
  </div>
</div>